<section id="torch-toolbar">
  <div class="torch-container">
    <%= link "Edit", to: Routes.admin_smart_contract_path(@conn, :edit, @smart_contract), class: "torch-button" %>
    <%= link "Back", to: Routes.admin_smart_contract_path(@conn, :index), class: "torch-button" %>
  </div>
</section>

<section id="torch-header-and-content">
  <div class="torch-container">
    <div class="header">
      <h3>Smart contract Details</h3>
    </div>
    <ul>

        <li>
          <div class="torch-show-label">Name:</div>
          <div class="torch-show-data"><%= @smart_contract.name %></div>
        </li>

        <li>
          <div class="torch-show-label">Contract source code:</div>
          <div class="torch-show-data"><%= @smart_contract.contract_source_code %></div>
        </li>

        <li>
          <div class="torch-show-label">Abi:</div>
          <div class="torch-show-data"><%= Jason.encode!(@smart_contract.abi) %></div>
        </li>

        <li>
          <div class="torch-show-label">Account:</div>
          <div class="torch-show-data"><%= @smart_contract.account_id %></div>
        </li>

    </ul>
  </div>
</section>
